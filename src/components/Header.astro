---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="fixed w-pq2 z-20 backdrop-blur-md">
<div class="mx-auto max-w-3xl">
<nav class="flex items-center gap-3 text-base">
	<h2>
		{SITE_TITLE}
	</h2 class="font-semibold tracking-tighter p-2 font-mplus text-lg">
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">Source</HeaderLink>
	</nav>
  </div>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
